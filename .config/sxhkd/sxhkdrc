#################################################################
# KEYBOARD BINDINGS FOR BSPWM
#################################################################

#################################################################
# SUPER + FUNCTION KEYS
#################################################################

#Rofi Fullscreen
super + F11
    rofi -theme-str 'window \{width: 100%;height: 100%;\}' -show drun

#################################################################
# SUPER + ... KEYS
#################################################################

# Bpytop
super + b
    alacritty -e bpytop

# whatsapp
super + w
    whatsapp-for-linux

# arcolinux-logout
super + x
    arcolinux-logout

# TaskManager
super + t
    xfce4-taskmanager

# Pavucontrol
super + a
    pavucontrol

# Terminal 
super + Return
    alacritty

# Xkill
super + Escape
    xkill

# File manager
super + d
    thunar

# Virtual Machine
super + v
    virt-manager

# deadbeef
super + m
    deadbeef

# wps office
# super + o
#     wps

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#qutebrowser
super + shift + q
	qutebrowser

#Rofi show window
super + shift + w
    rofi -show window

#Rofi show emoji
super + shift + e
    rofi -show emoji

#dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

#Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# Prompt
super + shift + Return
	rofi -show combi

# reload sxhkd
super + shift + Escape
	pkill -USR1 -x sxhkd

# Teams
super + shift + t
    teams

# Obsidian
super + shift + o
    obsidian-insider

# Change alacritty color theme in easy way
super + shift + c
    ./alchanger.sh

# Shutdown
super + shift + s
    shutdown now

#################################################################
# CONTROL + ALT KEYS
#################################################################

#arcolinux-welcome-app
ctrl + alt + w
    arcolinux-welcome-app

#arcolinux-tweak-tool
ctrl + alt + e
    arcolinux-tweak-tool

#################################################################
# ALT + ... KEYS
#################################################################

# Change wallpaper
alt + space
    nitrogen --random --set-tiled

#################################################################
# CONTROL + SHIFT KEYS
#################################################################
ctrl + shift + {e,l,p,q}
    {edit-configs,lock,powermenu,quick-links}

#################################################################
#     SCREENSHOTS
#################################################################

#Scrot
Print
    scrot 'ArcoLinux-%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f $$(xdg-user-dir PICTURES)'

#screeenshooter
ctrl + alt + s
    xfce4-screenshooter

#Flameshot
ctrl + shift + s
    flameshot gui

#################################################################
#     FUNCTION KEYS
#################################################################

#xfce4-terminal dropdown
F1
    xfce4-find-cursor

F2
    xfce4-appfinder

F3
    xfce4-settings-manager

#################################################################
#     MULTIMEDIA KEYS
#################################################################

#Raises volume
XF86AudioRaiseVolume
    amixer set Master 10%+

#Lowers volume
XF86AudioLowerVolume
    amixer set Master 10%-

#Mute
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

#PLAY
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

#Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

#Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10

#########################
#        POLYBAR        #
#########################

#Hide polybar
super + y
    polybar-msg cmd toggle

#################################################################
#################################################################
##################   DESKTOP SPECIFIC    ########################
#################################################################
#################################################################

#################################################################
# CTRL + ALT KEYS
#################################################################

#Picom Toggle
ctrl + alt + o
    ~/.config/leftwm/scripts/picom-toggle.sh

#################################################################
# SUPER + KEYS
#################################################################

# Toggle pseudo tiling of window
super + p
	bspc node --state \~pseudo_tiled

#kill
super + q
	bspc node -c

#################################################################
# SUPER KEYS
#################################################################

# Change window gap
super + {minus,equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))
#
# Focus next/previous window
super + h
	bspc node --focus west

# Focus next/previous window
super + l
	bspc node --focus east

# Focus Up window
super + k
	bspc node --focus north

# Focus Down window
super + j
	bspc node --focus south
# Increase/decrease window gap on focused desktop
super + {left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# set the window state
super + Tab
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Move focus to other monitor
super + period
		bspc monitor -f next

# Move focus to other monitor
super + comma
		bspc monitor -f next
# Move focused window to other monitor
super + o
	bspc node -m next --follow

#################################################################
# SUPER + ALT KEYS
#################################################################

# Toggle floating
super + shift + f
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

# Move floating window
super + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#################################################################
# SUPER + CONTROL KEYS
#################################################################

# Reboot
super + control + r
    reboot

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

# Focus/swap windows by direction
super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

# Flip layout vertically/horizontally
super + {_,shift + }z
	bspc node @/ --flip {vertical,horizontal}

# expand a window by moving one of its side outward
super + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#################################################################
# SUPER + CONTROL KEYS
#################################################################

# Contract tiled space
super + ctrl + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Focus parent/brother/first/second for preselection
super + ctrl + {e,r,t,y}
	bspc node --focus @{parent,brother,first,second}

# Preselect the splitting area for next window on leaf/parent
super + ctrl + {u,i,o,p}
	bspc node --presel-dir \~{west,south,north,east}

# Define splitting ratio for next window on leaf/parent
super + ctrl + {_,shift +}{1-9}
	bspc node {_,@/} --presel-ratio 0.{1-9}

#################################################################
# ALT KEYS
#################################################################

#Rotate desktop
alt + r
	bspc node @/ --rotate {90,-90}

#################################################################
# ALT + SHIFT KEYS
#################################################################

# Expand tiled space
alt + shift + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

#################################################################
# CTRL + ALT KEYS
#################################################################


